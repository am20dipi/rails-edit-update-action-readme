<%= form_for @article do |f| %>
  <%= f.label 'Article Title' %><br>
  <%= f.text_field :title %><br>

  <%= f.label 'Article Description' %><br>
  <%= f.text_area :description %><br>

  <%= f.submit "Submit Article" %>
<% end %> 

<!-- form_for determines that @article is not a new instance -->
<!-- form_for automatically sends us to the update path, after submitting the form -->